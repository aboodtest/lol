<!-- only show up if there is success and it has a length -->
<% if(success && success.length) {%>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%=success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>

<!-- only show up if there is error and it has a length -->
<% if(error && error.length) {%>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <%=error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
